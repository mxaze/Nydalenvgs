datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["fullTextSearch"]
}

model Users {
    id        Int      @id @default(autoincrement())
    firstname String
    lastname  String
    email     String
    username  String
    password  String
    adress    String
    phone     String
    role      Role
    classId   Int?
    class     Class?   @relation(fields: [classId], references: [id])
    createdAt DateTime @default(now())

    token String @unique @default(cuid())
}

model Class {
    id     Int     @id @default(autoincrement())
    grade  Grade

    people Users[]
}

enum Role {
    STUDENT
    TEACHER
    MILJOFAGARBEIDAR
    ITMEDARBEIDER
    ADMIN
}

enum Grade {
    VG1
    VG2
    VG3
}
